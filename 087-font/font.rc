CAPTION "关于字体和文字输出示范程序"
FONT 14, "System"
BEGIN
    PUSHBUTTON "确定", IDOK, 43, 51, 40, 14
    CTEXT "字体和文字输出示范程序", IDC_STATIC, 22, 9, 92, 8
    CTEXT "XXX编写", IDC_STATIC, 30, 24, 76, 10, NOT WS_GROUP
    CTEXT "一九九六年九月", IDC_STATIC, 36, 37, 65, 8, NOT WS_GROUP
    ICON "FONTICON", IDC_STATIC, 11, 23, 18, 20
    CONTROL "", IDC_STATIC, "Static", SS_BLACKFRAME, 40, 34, 56, 1
END

// Accelerator
FONTACCEL ACCELERATORS DISCARDABLE
BEGIN
    "D", IDM_DECSPACE, VIRTKEY, CONTROL, NOINVERT
    "I", IDM_INCSPACE, VIRTKEY, CONTROL, NOINVERT
END

