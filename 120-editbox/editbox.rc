    CTEXT       "日期",             IDC_STATIC, 36, 37, 65, 8, NOT WS_GROUP
    ICON        "EditBoxICON",      IDC_STATIC, 11, 23, 18, 20
    CONTROL     "", IDC_STATIC, "Static", SS_BLACKFRAME, 40, 34, 56, 1
