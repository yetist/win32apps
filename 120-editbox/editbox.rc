#include <windows.h>
#include <winnls.h>
#include "editbox.h"

// 资源文件是utf8编码
#pragma code_page(65001)

//Icon
EDITBOXICON ICON DISCARDABLE "about.ico"

// Menu
EDITBOXMENU MENU DISCARDABLE
BEGIN
    POPUP "文件(&F)"
    BEGIN
        MENUITEM "退出(&X)",    IDM_EXIT
    END
    POPUP "编辑(&E)"
    BEGIN
        MENUITEM "撒销(&U)",    IDM_EDITUNDO
        MENUITEM SEPARATOR
        MENUITEM "剪切(&T)",    IDM_EDITCUT
        MENUITEM "复制(&C)",    IDM_EDITCOPY
        MENUITEM "粘贴(&P)",    IDM_EDITPASTE
        MENUITEM "删除(&D)",    IDM_EDITDELETE
        MENUITEM SEPARATOR
        MENUITEM "全部选定(&A)", IDM_EDITSELECTALL
    END
    POPUP "选项(&T)"
    BEGIN
        MENUITEM "设置窗口位置(&P)...",     IDM_SETWINPOSITION
        MENUITEM "设置窗口标题文字(&C)...", IDM_SETWINCAPTION
    END
    POPUP "帮助(&H)"
    BEGIN
        MENUITEM "关于(&A)...",         IDM_ABOUT
    END
END

//Dialog
